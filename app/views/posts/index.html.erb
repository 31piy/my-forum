<div class="container p-3 posts-wrapper">

  <h2 class="h2 text-black-50 page-title">All Questions</h2>

  <ul class="list-unstyled posts-list">
    <% @posts.each do |post| %>
      <li class="post-item">
        <h4 class="post-title">
          <%= link_to post.title, post_path(id: post.id) %>
        </h4>
        <p class="post-body"><%= post.body %></p>

        <div class="post-footer d-flex justify-content-between">
          <small>
            <a href data-role="toggle-comment-box"
              data-parent-id="<%= post.id %>" data-parent-type="Post">
              <%= octicon "comment" %> Comment
            </a>
          </small>

          <small class="text-black-50">
            At <%= post.updated_at %> by <%= post.user.name %>
          </small>
        </div>

        <div class="mt-2">
          <%= render 'comments/form', parent: post, post: post %>
        </div>
        <hr>
      </li>
    <% end %>
  </ul>

</div>
